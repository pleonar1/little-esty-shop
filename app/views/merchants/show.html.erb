<h1><%= @merchant.name %></h1>
<%= link_to "Item Index", "/merchants/#{@merchant.id}/items" %>
<%= link_to "Invoice Index", "/merchants/#{@merchant.id}/invoices" %>
<%= link_to "Bulk Discounts", "/merchants/#{@merchant.id}/bulk_discounts"  %>
<div class="top_customers">
  <ol>
    <% @merchant.top_five_customers.each do |customer| %>
      <li><%= customer.name %>, <%= customer.trans_count %></li>
    <% end %>

  </ol>


</div>

<h2> Items ready to ship </h2>
<div class="items-ready-to-ship">

  <% @merchant.ship_ready_items.each do |invoice_item| %>
    <li>
      <%= "#{invoice_item.item.name}" %>
      <%= link_to "Order number: #{invoice_item.invoice.id}", "/merchants/#{@merchant.id}/invoices/#{invoice_item.invoice.id}" %>
      <%= "Ordered on: #{invoice_item.invoice.created_at.strftime("%A, %B %d, %Y")}" %>
    </li>
  <% end %>
</div>
